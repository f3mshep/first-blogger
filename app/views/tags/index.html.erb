<h1>All Tags</h1>

<ul id= "articles" >
  <% @tags.each do |tag|%>
    <li>
      <%= link_to tag.name, tag_path(tag) %>
      <% if logged_in? %>
      <%= link_to "Delete" , tag_path(tag), data: {confirm: "Really delete the tag?"},
       method: :delete %>
       <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "Back to Articles List", articles_path %>
